                        <item><ref type="apparatus" target="account_of_a_tour_on_the_continent_apparatus.php">Account of a Tour on the Continent</ref></item>
                        <item><ref type="apparatus" target="msi_poetry_anthology_apparatus.php">MS I Poetry Anthology</ref></item>
